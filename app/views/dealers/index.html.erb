<p id="notice"><%= notice %></p>

<h1>Dealers</h1>

<table class="table table-striped table-bordered table-hover">
<thead class="table-dark">
<tr class="table-active">
      <th>Full Name</th>
      <th>Company Name</th>
      <th>Display Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Work Phone</th>
      <th>Website</th>
      <th>Billing Address</th>
      <th>Shipping Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dealers.each do |dealer| %>
      <tr>
        <td><%= dealer.title%>  <%= dealer.first_name %> <%= dealer.last_name %> </td> 
        <td><%= dealer.company_name %></td>
        <td><%= dealer.display_name %></td>
        <td><%= dealer.email %></td>
        <td><%= dealer.phone %></td>
        <td><%= dealer.work_phone %></td>
        <td><%= dealer.website %></td>
        <td><%= dealer.billing_address %></td>
        <td><%= dealer.shipping_address %></td>
        <td><%= link_to 'Show', dealer %></td>
        <td><%= link_to 'Edit', edit_dealer_path(dealer) %></td>
        <td><%= link_to 'Delete', dealer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

