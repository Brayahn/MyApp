<h1>Price Lists</h1>
</br>
<%= link_to 'Define New Price', new_price_list_path, class:"btn btn-secondary" %>
</br>
</br></br>
<table class="table table-striped table-bordered table-hover">
<thead class="table-dark">
<tr class="table-active">
      <th>Vendor</th>
      <th>Product</th> 
      <th>Price</th> 
      <th colspan="3"></th> 
    </tr>
  </thead>

  <tbody>
    <% @price_lists.each do |price_list| %> 
      <tr>
        <td><%= price_list.vendor %></td>
        <td><%= price_list.product %></td>
        <td><%= price_list.price %></td>
        <td><%= link_to 'Show', price_list %></td>
        <td><%= link_to 'Edit', edit_price_list_path(price_list) %></td>
        <td><%= link_to 'Destroy', price_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


